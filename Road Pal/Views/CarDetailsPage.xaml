<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoadPal.Views.CarDetailsPage"
             xmlns:vm="clr-namespace:RoadPal.ViewModels"
             x:DataType="vm:CarDetailsViewModel">

    <ContentPage.Content>
        <AbsoluteLayout>
            <ScrollView AbsoluteLayout.LayoutFlags="All"
                        AbsoluteLayout.LayoutBounds="0, 0, 1, 1">
                <StackLayout Padding="20">
                    <Image Source="{Binding CarImage}" 
                           Aspect="AspectFill" 
                           WidthRequest="320" 
                           HeightRequest="200"
                           VerticalOptions="Center" 
                           HorizontalOptions="Center"/>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                        <Label Text="{Binding Make}" FontSize="24" />
                        <Label Text="{Binding Model}" FontSize="24" />
                    </StackLayout>

                    <Frame BackgroundColor="White"
                           CornerRadius="5"
                           Padding="0"
                           HorizontalOptions="FillAndExpand"
                           Margin="0,10"
                           HasShadow="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackLayout Grid.RowSpan="2" Grid.Column="0" BackgroundColor="#00309a" Padding="5" VerticalOptions="Center" HorizontalOptions="Center">
                                <Image Source="Resources/Images/flag_of_europe.png"
                                       WidthRequest="30"
                                       HeightRequest="20"
                                       Aspect="AspectFit"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                                <Label Text="{Binding CountryCode}" 
                                       FontSize="12" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" 
                                       TextColor="White" />
                            </StackLayout>

                            <Label Grid.Column="1"
                                   FontSize="24"
                                   Text="{Binding LicensePlate}"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Padding="10"
                                   TextColor="Black" />
                        </Grid>
                    </Frame>

                    <Label Text="{Binding Description}" 
                           FontSize="18" 
                           VerticalOptions="Start"/>
                </StackLayout>
            </ScrollView>

            <Frame BackgroundColor="Blue"
                   CornerRadius="20"
                   Padding="14"
                   HasShadow="True"
                   VerticalOptions="End"
                   HorizontalOptions="Center"
                   AbsoluteLayout.LayoutFlags="PositionProportional"
                   AbsoluteLayout.LayoutBounds="0.5, 1, AutoSize, AutoSize"
                   Margin="0, 0, 0, 20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Image for Icon -->
                    <Image Source="Resources/Images/qr_icon.png"
                           WidthRequest="40" 
                           HeightRequest="40"
                           Aspect="AspectFit"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>

                    <!-- Text Next to the Icon -->
                    <Label Text="Scan a receipt"
                           FontSize="16"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"
                           Margin="10, 0, 0, 0"
                           TextColor="White"
                           Grid.Column="1"/>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ScanReceiptCommand}" />
                </Frame.GestureRecognizers>
            </Frame>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
